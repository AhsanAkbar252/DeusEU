<div class="fregment-login">
    <div class="screen">
        <div class="shape">
            <a href="index.html"><i class="far fa-chevron-left back2"></i></a>
            <img src="../images/shape1.svg" alt="" class="shape1">
            <img src="../images/shape2.svg" alt="" class="shape2">
            <div class="container">
                <div class="l-page">
                <h2 class="title ttt">Login</h2>
                <p>Don't have an account? <%= link_to "Get Started", new_registration_path(resource_name) %></p>

                <div class="user-input">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <%= f.telephone_field :mobile, autofocus: true, autocomplete: "mobile",placeholder: "Phone number" %>
                    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
                    <%= f.submit "Log in", class: 'user-input button ' %>
                   <!--  <= link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot' %> -->
                  <% end %>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>


