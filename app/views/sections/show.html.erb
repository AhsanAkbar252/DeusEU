<div class="fregment-search">
  <div class="screen">
    <div class="s-banner">
        <img src="../images/s-banner.svg" width="100%" alt="">
        <%= link_to :back do %>
            <i class="fa fa-chevron-left back"></i>
        <% end %>
    </div>

    <section>
        <div class="container">
                <h2 class="title tt"><%= @section.name %></h2>
                <p ><%= @section.videos.sum(:minutes) %> MIN</p>
                <% if current_user.admin? %>
                  <%= link_to 'Add New Video', new_video_path(section_id: @section.id), class: 'btn btn-primary pay clicked' %>
                  <%= link_to 'Edit Section', edit_section_path(@section), class: 'btn btn-success pay' %>
                  <%= link_to 'Destroy', section_path(@section), method: :delete, class: 'btn btn-danger pay', data: { confirm: 'Are you sure?' }%>
                <% end %>

           <div class="video-main">
            <% i=0 %>
            <% @section.videos.each do |video| %> 
              <% i=i+1 %>
              <div class="video">
                  <h1><%= i %></h1>
                  <div class="in">
                      <p><%= video.title %></p>
                      <p class="time"><%= video.minutes %> min</p>
                  </div>
                  <%= link_to video do %>
                      <%= fa_icon 'fas fa-play-circle play' %>
                  <% end %>
              </div>
            <% end %>
         </div>
        </div>
    </section>
  </div>
</div>
