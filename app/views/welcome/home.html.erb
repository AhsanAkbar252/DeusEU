    <div class="fregment-home active">
    <section>
        <div class="screen">
            <div class="banner">
                <div class="logo">
                <img src="../images/site-logo.png" alt="">
                </div>
                <div class="content">
                <h2>Where Enterepreneurs <br> Are Created</h2>
                <p>You Are Only One Month Away</p>
                </div>
                <center>
                    <%= link_to 'Learn More', sections_path, class: 'btn btn-primary' %>
                </center>
            </div>
        </div>
    </section>

    <section>
        <div class="screen">
            <div class="container">
                <div class="main">
                <h2 class="title">Try this</h2>

                <div class="wraper">
                    <% @sections.limit(4).each do |section| %>
                        <%= link_to section_path(section) do %>
                        <div class="items mr card bg-dark text-white" style="border-radius: 10px;">
                          <img src="images/items.png" class="card-img"  alt="...">
                          <div class="card-img-overlay">
                            <h5 class="card-title before"><%= section.name %></h5>
                            <% if section.videos != nil %>
                            <p class="card-text after"><%= section.videos.sum(:minutes) %> MIN</p>
                            <% end %>
                          </div>
                        </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
            </div>
        </div>
    </section>
    </div>