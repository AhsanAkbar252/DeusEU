<div class="fregment-login">
    <div class="screen">
        <div class="shape">
            <%= link_to :back do %>
              <i class="fa fa-chevron-left back2"></i>
            <% end %>
            <img src="../../images/shape1.svg" alt="" class="shape1">
            <img src="../../images/shape2.svg" alt="" class="shape2">
            <div class="container">
                <div class="l-page">
                <h2 class="title ttt">Create/Edit Video</h2>

                <div class="user-input">
                    <%= form_with(model: video) do |form| %>
                      <% if video.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(video.errors.count, "error") %> prohibited this section from being saved:</h2>

                        <ul>
                          <% video.errors.each do |error| %>
                            <li><%= error.full_message %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>


                    <div class="field">
                      <%= form.text_field :title, class: 'input',placeholder: 'Video Title' %>
                    </div>

                    <div class="field">
                      <%= form.text_field :video_link, class: 'input',placeholder: 'Video Link' %>
                    </div>

                    <div class="field">
                      <%= form.text_field :minutes, class: 'input',placeholder: 'Video minutes' %>
                    </div>

                    <div class="field">
                      <%= form.hidden_field :section_id, :value => @section_id %>
                    </div>


                    <%= form.submit class: 'user-input button ' %>
                  <% end %>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
