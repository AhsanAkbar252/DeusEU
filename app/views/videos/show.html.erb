<div class="fregment-search">
  <div class="screen">
    <div class="s-banner">
      <div>
        <%= link_to :back do %>
            <i class="fa fa-chevron-left back"></i>
        <% end %>
      </div>
        <iframe width='100%' height="400" src="<%= @video.video_embed(@video.video_link) %>" title="W3Schools Free Online Web Tutorials"></iframe>
    </div>

    <section>
        <div class="container">
                <h2 class="title tt"><%= @video.title %></h2>
                <p><%= @video.minutes %> MIN</p>
                <% if current_user.admin? %>
                  <%= link_to 'Delete Video', video_path, method: :delete, class: 'btn btn-primary pay clicked' %>
                  <%= link_to 'Edit Video', edit_video_path(@video), class: 'btn btn-primary pay clicked' %>
                <% end %>
                <%= link_to 'Back', :back, class: 'btn btn-primary pay clicked' %>
        </div>
    </section>
  </div>
</div>


<% if current_user.admin? %>
<%= link_to 'Edit', edit_video_path(@video) %>
<% end %>
